<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    tools:context="com.example.sebastian.demonsphinx.DisplaySettings">


    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ad"
        android:textColor="#B3FFFFFF"
        android:textStyle="italic"
        android:layout_below="@+id/actuall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/value3"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/setValue1"
        android:layout_toStartOf="@+id/setValue1"
        android:text="TextView"
        android:textColor="#B3FFFFFF"
        android:textSize="14sp"
        android:layout_alignTop="@+id/value3" />

    <TextView
        android:id="@+id/actuall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Aktualne ustawienia"
        android:background="#606060"
        android:textColor="#80FFFFFF"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/setValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#B3FFFFFF"
        android:hint="Wprowadź słowo klucz"
        android:inputType="textPersonName"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/setValue3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/setValue1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/setValue"
        android:layout_toEndOf="@+id/setValue"
        android:ems="10"
        android:textColor="#B3FFFFFF"
        android:hint="O ile %"
        android:inputType="numberDecimal"
        android:maxLength="2"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:text="Zapisz"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="195dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/setValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/setValue1"
        android:layout_toEndOf="@+id/setValue"
        android:layout_toRightOf="@+id/setValue"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/setValue3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="O ile %"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/value3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/value"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="TextView"
        android:textColor="#B3FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#606060"
        android:text="Nowe Wartości"
        android:textColor="#80FFFFFF"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/setValue" />

</RelativeLayout>