<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hubertstpiski.speak1.EditSettings.VoiceSettings">



    <Button
        android:text="Zapisz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/button2"
        android:textSize="12sp"
        android:layout_below="@+id/editText6"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/textView13"
        android:textSize="18sp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:visibility="visible"
        android:id="@+id/editText6"
        android:layout_marginTop="36dp"
        android:hint="Wpisz słowo klucz"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toEndOf="@+id/editText6"
        android:id="@+id/textView14"
        android:textSize="18sp" />

    <TextView
        android:text="Panel Edycji dla opcji zwiększenia głośności"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <EditText
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|numberDecimal"
        android:ems="10"
        android:id="@+id/editText7"
        android:visibility="visible"
        android:hint="O ile %"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:text="Aktualne ustawienia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        android:textSize="10sp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
